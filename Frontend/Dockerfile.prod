# Frontend/Dockerfile.prod
FROM nginx:alpine

# Remove default nginx content
RUN rm -rf /usr/share/nginx/html/*

# Copy built static files (Jenkins will place browser/ here)
COPY browser/ /usr/share/nginx/html/

# Keep optional static meta files if present
COPY prerendered-routes.json /usr/share/nginx/html/ || true
COPY 3rdpartylicenses.txt /usr/share/nginx/html/ || true

EXPOSE 80
# default nginx CMD/ENTRYPOINT are fine
